<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demo1.ui.GameController" alignment="TOP_CENTER" spacing="10" stylesheets="@game_view.css" styleClass="main-container">
    <BorderPane>
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="navbar">
                <Label fx:id="usernameLabel" text="Username" styleClass="navbar-item"/>
                <Label fx:id="starsLabel" text="Stars: 0" styleClass="navbar-item"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="homeButton" text="Home" styleClass="navbar-button"/>
            </HBox>
        </top>

        <center>
            <VBox alignment="CENTER" spacing="20">
                <HBox alignment="CENTER" spacing="40" styleClass="status-bar">
                    <Label fx:id="timeLabel" text="Time Left: 5:00" styleClass="status-item"/>
                    <Label fx:id="scoreLabel" text="Score: 0" styleClass="status-item"/>
                    <Label fx:id="pairsFlippedLabel" text="Pairs Flipped: 0" styleClass="status-item"/>
                </HBox>

                <GridPane fx:id="gameGrid" alignment="CENTER" hgap="15" vgap="15" styleClass="game-grid">
                    <!-- Buttons for cards will be added here -->
                </GridPane>
            </VBox>
        </center>
    </BorderPane>
</VBox>
