<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo1.ui.MainViewController"
      spacing="20"
      alignment="center"
      style="-fx-background-color: #f0f0f0; -fx-padding: 40; -fx-alignment: center;">

    <!-- Padding cho VBox -->
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Nút Đăng Nhập -->
    <Button fx:id="loginButton" text="Đăng Nhập" onAction="#handleLoginButton"
            prefWidth="250" prefHeight="40"
            style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>

    <!-- Nút Đăng Ký -->
    <Button fx:id="registerButton" text="Đăng Ký" onAction="#handleRegisterButton"
            prefWidth="250" prefHeight="40"
            style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white;"/>

</VBox>
